<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent">
    <TextView
        android:id="@+id/popoup_compte_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="uhyu"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/popoup_compte_edit_field"
        android:layout_width="wrap_content"
        android:text="test"
        android:layout_below="@id/popoup_compte_edit_title"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/popoup_compte_edit_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="un"
        android:layout_toRightOf="@id/popoup_compte_edit_field"/>
    <Button
        android:id="@+id/popoup_compte_edit_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:layout_below="@id/popoup_compte_edit_value"/>

</RelativeLayout>